<div class='bar-info'>
  <h1><%= @bar.name %></h1>

  <div class='bar-image'>
    <img src=<%= @bar.image_link %> class='img-rounded'>
  </div>

  <div class='bar-attributes'>
    <ul>
      <li class='bar-address'>
        <%= @bar.address %><br/>
        <%= "#{@bar.city}, #{@bar.state} #{@bar.zip_code}" %><br/>
        <strong>Neighborhood: </strong>
        <%= @bar.neighborhood %>
      </li><br>
      <li class='bar-details'>
        <strong>Fan Intensity Rating: </strong>
        <%= @bar.fan_intensity_rating %><br/>
        <strong>Number of Screens: </strong>
        <%= @bar.num_of_screens %>
      </li>
    </ul>
  </div>

  <div class='matchup-table'>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Away Team</th>
          <th></th>
          <th>Home Team</th>
          <th>Game Time</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
        <% @bar.games.each do |game| %>
        <tr>
          <td class='away-team'>
            <%= "#{game.away_team.home_city} #{game.away_team.team_name}" %>
            <img src=<%= game.away_team.logo_path %> class='team-logo'>
          </td>
          <td>at</td>
          <td class='home-team'>
            <img src=<%= game.home_team.logo_path %> class='team-logo'>
            <%= "#{game.home_team.home_city} #{game.home_team.team_name}" %>
          </td>
          <td><%= game.game_at %></td>
          <td><%= link_to "Delete", bar_path({:id => @bar, :game_id => game.id }), method: :delete%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render 'games/form' %>

  <div class='bar-controls'>
    <%= link_to "Update Games", bar_games_path(@bar)%>
  </div>
</div>