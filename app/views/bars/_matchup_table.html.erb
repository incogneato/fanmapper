<div class='matchup-table'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Away Team</th>
        <th></th>
        <th>Home Team</th>
        <th>Game Time</th>
        <% if can? :update, @bars %>
          <th>Remove Game</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @bar.games.each do |game| %>      
      <tr class="game-id-<%= game.id %>">
        <td class='away-team'>
          <%= "#{game.away_team.home_city} #{game.away_team.team_name}" %>
          <%= image_tag(game.away_team.small_logo_path) %>
        </td>
        <td>at</td>
        <td class='home-team'>
          <%= image_tag(game.home_team.small_logo_path) %>
          <%= "#{game.home_team.home_city} #{game.home_team.team_name}" %>
        </td>
        <td><%= game.game_at.time.strftime('%A %l:%M %p - %m/%d') %></td>
        <% if can? :update, @bars %>       
          <td class="option-delete"><%= link_to "Remove", bar_path({:id => @bar, :game_id => game.id }), method: :delete, :remote => true %></td>
          <td class="option-add" style="display:none"><%= link_to 'Add', add_game_path(@bar, game), method: :post, :remote => true %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>