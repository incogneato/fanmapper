<div class="unselected-matchup-table">

 <h2 class="section-header">Upcoming Games</h2>

  <% if current_user.bars.include?(@bar) %>
  <table class="table table-striped">
    <thead>
      <tr>        
        <th class="team-location">Away Team</th>
        <!-- <th class="at"></th> -->
        <th class="team-location">Home Team</th>
        <th class="game-time">Game Time</th>
        <th class="option-header">Add Game</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
      <tr class="game-id-<%= game.id %>">
        <td class="team-location">
          <%= "#{game.away_team.team_name}"%><img src=<%= game.away_team.logo_path %> class='team-logo'>
        </td>
        <!-- <td class="at">at</td> -->
        <td class="team-location">
          <img src=<%= game.home_team.logo_path %> class='team-logo'><%= "#{game.home_team.team_name}" %>
        </td>
        <td class="game-time"><%= game.game_at.strftime('%A %l:%M %p %m-%d')%></td>       
        <td class="option-add"><%= link_to 'Add', add_game_path(@bar, game), method: :post, :remote => true %></td>
        <td class="option-delete" style="display:none"><%= link_to "Remove", bar_path({:id => @bar, :game_id => game.id }), method: :delete, :remote => true %>        
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>
